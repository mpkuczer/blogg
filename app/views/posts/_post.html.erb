<div class="card container mb-3">
  <div class="card-header d-flex justify-content-between align-items-center">
    <img src="https://via.placeholder.com/64x64" style="display: inline" alt="Sample Image">
    <span>
      <span>mkzr</span>
      <small class="text-muted"><i>Posted on <%= post.created_at.to_date %></i></small>
    </span>
  </div>
  <div class="card-body">
    <p><%= post.post %></p>
    <footer class="row justify-content-center">
      <%= link_to post, class: "col-2" do %>
        <span class="icon"><i class="fa-solid fa-link text-dark"></i></span>
      <% end %>
      <%= link_to edit_post_path(post), class: "col-2" do %>
        <span class="icon"><i class="fa-solid fa-pencil text-dark"></i></span>
      <% end %>
      <%= link_to post, class: "col-2", data: { 
                              turbo_method: :delete,
                              turbo_confirm: "Are you sure you want to delete this post?" } do %>
        <span class="icon"><i class="fa-solid fa-trash text-dark"></i></span>
      <% end %>
    </footer>
  </div>
</div>
