<div class="mx-4 my-4 row form-group">
  <%= form_with model: post, class: "row" do |form| %>
    <% if post.errors.any? %>
      <% post.errors.each do |error| %>
        <% flash.now[:notice] = error.full_message %>
      <% end %>
    <% end %>
    <div class="col-11">
      <%= form.label :post, style: "display: none" %>
      <%= form.text_area :post, class: "form-control mx-2", placeholder: "Write about it..." %>
    </div>
    <div class="col-1 d-flex align-items-center">
      <%= form.submit btn_text, class: "h-100 btn btn-light border " %>
    </div>
  <% end %>
</div>
