<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mx-4 mt-5"}) do |f| %>
        <%= f.error_notification %>
        <div class="form-group my-2">
          <%= f.input :email,
                input_html: { class: "form-control "} %>
        </div>
        <div class="form-group mx-5 mt-5">
          <%= f.button :submit, class: "form-control btn btn-light", value: "Send recovery email" %>
        </div>
      <% end %>
    </div>
  </div>
</div>